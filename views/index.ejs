<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/css/bootstrap.css">
  </head>
  <body>
    <div class="container mb-5">
      <form method="post" action="/upCar" enctype="multipart/form-data" class="container shadow-lg ">
        <div class="row justify-content-center ">
          <input type="text" class="row w-50 mt-3 p-2 rounded-1 shadow-lg"  name="ten" placeholder="Ten">
        </div>
        <div class="row justify-content-center">
          <input type="text" class="row w-50 mt-3 p-2 rounded-1 shadow-lg" name="gia" placeholder="Gia">
        </div>
        <div class="row justify-content-center">
          <input type="text" class="row w-50 mt-3 p-2 rounded-1 shadow-lg" name="nam" placeholder="Nam san xuat">
        </div>
        <div class="row justify-content-center ">
          <input type="file" class="row mb-2 w-50 mt-3 p-2 rounded-1 shadow-lg justify-content-center" name="anh" multiple>
        </div>
        <div class="row justify-content-center ">
          <button type="submit" class="btn btn-success w-25 mb-5"> add mongo</button>
        </div>
      </form>
    </div>
  <div class="container">
        <h1> danh sach</h1>
    <div class="row border-1 shadow-lg p-2 mb-5-2 justify-content-center w-100">
      <% data.forEach(function(item) { %>
        <p> id: <%= item.id %> -- ten: <%= item.ten %>--gia: <%= item.gia %>--namSx<%= item.nam %></p>
        <a href="/delete/<%= item.id %>" methods="get"> Xoa </a>
        <a href="/update/<%= item.id %>" methods="get"> update </a>
        <p>--------------------------------------------------------------------------------</p>
      <% }); %>
    </div>
  </div>
  </body>
</html>
